{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="header-block">
        <h1>Category</h1><a class="btn btn-primary" href="{{ path('category_new') }}">Create new Category</a>
    </div>
    <table class="table table-striped table-bordered display responsive nowrap" width="100% ">
        <thead>
            <tr>
                <th width="15%">Id</th>
                <th>Name</th>
                <th width="10%">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}