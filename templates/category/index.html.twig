{% extends 'base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}
    <div class="header-block">
        <h1>Category</h1><a class="btn btn-primary" href="#">Create new Category</a>
    </div>
   
    <table class="table table-striped table-bordered display responsive nowrap table-simple" width="100% ">
        <thead>
        <tr>
            <th width="15%">Id</th>
            <th>Name</th>
            <th width="10%">actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'slug': category.slug}) }}">show</a>
                    <a href="#">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
