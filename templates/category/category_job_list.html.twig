{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <div class="container mt-3 mb-4">
        <table class="table table-hover table-sm">
            <tr class="thead-dark">
                <th>id</th>
                <th>Position</th>
                <th>Company</th>
                <th>Location</th>
                <th>Active</th>
                <th>Expires at</th>
            </tr>
            {% for job in jobs %}
                <tr {% if not job.active %} class="table-danger" {% endif %}>
                    <td>{{ job.id }}</td>
                    <td>
                        <a href="{{ url('job.show', {id: job.id}) }}">{{ job.position }}</a>
                    </td>
                    <td>{{ job.company }}</td>
                    <td>{{ job.location }}</td>
                    <td>{{ job.activated }}</td>
                    <td>{{ job.expiresAt|date("d/m/Y") }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
