{% extends 'base.html.twig' %}

{% block body %}

    <div class="my-3 p-3 bg-white rounded box-shadow mt-5 pt-5">

        <h3>{{ category.name }}</h3>

        {% if jobs is not empty %}

        <table class="table table-hover table-bordered">
            <thead>
            <tr class="flex">
                <th>Type</th>
                <th>Company</th>
                <th>Location</th>
            </tr>
            </thead>
            <tbody>
            {% for job in jobs %}
                <tr>
                    <td width="30%"><a href="{{ path('jobs.show', {'id': job.id}) }}">{{ job.type }}</a></td>
                    <td width="40%">{{ job.company }}</td>
                    <td>{{ job.location }}</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(jobs) }}
        </div>

        {% else %}
            <p>No jobs assigned to this category!</p>
        {% endif %}

    </div>

{% endblock %}
