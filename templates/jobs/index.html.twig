{% extends 'base.html.twig' %}

{% block body %}

    <div class="my-3 p-3 bg-white rounded box-shadow mt-5">
        <h6 class="border-bottom border-gray pb-2 mb-0">Current jobs</h6>
        {% if jobs is not empty %}
            {% for job in jobs %}
                <div class="media text-muted pt-3" style="display: flex">
                    <img src="{{ job.logo }}" alt="" class="mr-2 rounded" width="100" height="100">

                    <div style="display: flex; flex-direction: column; margin-left: 10px;">
                        <p><strong>Company:</strong> {{ job.company }}</p>
                        <p><strong>Type:</strong> {{ job.type }}</p>
                        <p><strong>Description:</strong> {{ job.description | slice(0, 100) ~ '. . .' }}</p>
                        <p><strong>Location:</strong> {{ job.location }}</p>

                        <a style="align-self: flex-start" class="btn btn-sm btn-success"
                           href="{{ path('jobs.show', {'id': job.id}) }}">View More Details</a>
                    </div>

                </div>

                {% if not loop.last %}
                    <hr>
                {% endif %}

            {% endfor %}
        {% else %}
            <p>No jobs available to this category</p>
        {% endif %}

    </div>

{% endblock %}
