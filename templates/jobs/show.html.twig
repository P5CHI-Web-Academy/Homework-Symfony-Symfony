{% extends 'base.html.twig' %}

{% block body %}

    <div class="my-3 p-3 bg-white rounded box-shadow mt-5">
        <div class="media text-muted pt-3" style="display: flex">
            <img src="{{ job.logo }}" alt="" class="mr-2 rounded" width="100" height="100">

            <div style="display: flex; flex-direction: column; margin-left: 10px;">

                <p>
                    {{ job.type | capitalize }} - <a href="{{ job.url }}" target="_blank">more details</a> ,
                    {% if job.position > 0 %}
                        {{ job.position }} positions left.
                    {% else %}
                        <span style="color: #b00000">no more positions available for this post</span>
                    {% endif %}
                </p>
                <p><strong>Company:</strong> {{ job.company }} - {{ job.email }}</p>

                <p><strong>Location:</strong> {{ job.location }}</p>

                <p><strong>Description:</strong> {{ job.description }}</p>

                <p><strong>How to apply:</strong> {{ job.howToApply }}</p>

                <p><strong>Expires at:</strong> {{ job.expiresAt | date("m/d/Y") }}</p>

                <button style="align-self: flex-start" class="btn btn-sm btn-success">Apply</button>
            </div>

        </div>
        <hr>
    </div>

{% endblock %}
