{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-hover text-center">
        <tr class="active">
        <th class="text-center"><a href="{{ url('job.list') }}orderby/location">City</a></th>
        <th class="text-center"><a href="{{ url('job.list') }}orderby/position">Position</a></th>
        <th class="text-center"><a href="{{ url('job.list') }}orderby/company">Company</a></th>
        <th class="text-center"><a href="{{ url('job.list') }}orderby/createdAt">Created at</a></th>
        <th class="text-center"><a href="{{ url('job.list') }}orderby/expiresAt">Expires at</a></th>
        </tr>

        {% for job in jobs %}
            <tr>
                {% if job.activated %}
                    <td>{{ job.location }}</td>
                    <td>
                        {# <a href="#"> #}
                        {{ job.position }}
                        {#</a>#}
                    </td>
                    <td>{{ job.company }}</td>
                    <td>{{ job.createdat|date("d/m/Y") }}</td>
                    <td>{{ job.expiresat|date("d/m/Y") }}</td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>
{% endblock %}
