{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-hover text-center">
        <tr class="active">
            <th class="text-center"><a href="{{ url('job.list', {field: 'location', direction: 'ASC'}) }}">City</a></th>
            <th class="text-center"><a href="{{ url('job.list', {field: 'position', direction: 'ASC'}) }}">Position</a></th>
            <th class="text-center"><a href="{{ url('job.list', {field: 'company', direction: 'ASC'}) }}">Company</a></th>
            <th class="text-center"><a href="{{ url('job.list', {field: 'createdAt', direction: 'ASC'}) }}">Created at</a></th>
        </tr>

        {% for job in jobs %}
            <tr>
                <td>{{ job.location }}</td>
                <td>
                    {{ job.position }}
                </td>
                <td>{{ job.company }}</td>
                <td>{{ job.createdat|date("d/m/Y") }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
