{% extends 'base.html.twig' %}

{% block title %}Jobeet Project{% endblock %}

{% block body %}
    <div class="container">
        {% for category in categories %}
            <div id="category_section" class="mt-3 mb-4">
                <h4>
                    <a href="{{ url('category.job_list', {slug: category.slug}) }}">{{ category.name }}</a>
                </h4>
                <table class="table table-striped table-hover table-sm" style="table-layout: fixed;">
                <tr class="thead-dark">
                    <th style="width: 5%;">id</th>
                    <th>Position</th>
                    <th>Company</th>
                    <th>Location</th>
                </tr>
                {% for job in category.getActiveJobs|slice(0,jobs_show_limit_main_page) %}
                    <tr>
                        <td>{{ job.id }}</td>
                        <td>
                            <a href="{{ url('job.show', {id: job.id}) }}">{{ job.position }}</a>
                        </td>
                        <td>{{ job.company }}</td>
                        <td>{{ job.location }}</td>
                    </tr>
                {% endfor %}
                </table>
            </div>
        {% endfor %}
    </div>
{% endblock %}
