{% extends 'base.html.twig' %}

{% block body %}
    <b>Updated at: </b>{{ job.updatedAt | date("d/m/Y") }}<br>
    <img src="{{ asset('uploads/jobs/' ~ job.logo) }}" width="190" height="160"><br>
    <b>Company: </b>{{ job.company }}<br>
    <b>Site: </b>{{ job.url }}<br>
    <b>Location: </b>{{ job.location }}<br>
    <b>Position: </b>{{ job.position }}<br>
    <b>Type: </b>{{ job.type }}<br>
    <b>Description: </b>{{ job.description }}<br>
    <b>How to apply: </b>{{ job.howToApply }}<br>
    <b>Email: </b>{{ job.email }}<br>
{% endblock %}
