{% extends 'base.html.twig' %}

{% block title %}Job List{% endblock %}

{% block body %}
    <div class="header-block">
        <h1>Jobs</h1>
        <a class="btn btn-primary" href="{{ path('job.create') }}">Create new Job</a>
    </div>
    {% for category in categories %}
        <a href="{{ path('category.show', {slug: category.slug}) }}">
            {{ category.name }}
        </a>
        <table class="table table-striped table-bordered display responsive nowrap table-simple" width="100% ">
        <thead>
        <tr>
            <th>Type</th>
            <th>Company</th>
            <th>Logo</th>
            <th>Position</th>
            <th>Location</th>
            <th>Activated</th>
            <th>Email</th>
            <th>CreatedAt</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for job in category.jobs|slice(0,jobs_show_limit) %}
            <tr>
                <td>{{ job.type }}</td>
                <td>{{ job.company }}</td>
                <td><img class="img-fluid" src="{{ job.logo }}" width="100px" alt=""></td>
                <td>{{ job.position }}</td>
                <td>{{ job.location }}</td>
                <td align="center">{{ job.activated ? '<span class="badge badge-success">Yes</span>' : '<span class="badge badge-secondary">No</span>' }}</td>
                <td>{{ job.email }}</td>
                <td>{{ job.createdAt ? job.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('job.show', {'id': job.id}) }}">show</a>
                    <a href="#">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endfor %}

{% endblock %}
