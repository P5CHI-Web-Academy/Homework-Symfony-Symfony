<div class="tool-bar">
    {% if job.expiresAt > date() and not job.active %}
        {{ form_start(activateForm) }}
            {{ form_widget(activateForm) }}
            <button type="submit" class="btn btn-success" title="Activate">
                <span class="octicon octicon-check"></span>
            </button>
        {{ form_end(activateForm) }}
    {% endif %}

    <a href="{{ url('job.edit', {token: job.token}) }}">
        <button type="button" class="btn btn-secondary" title="Edit">
            <span class="octicon octicon-pencil"></span>
        </button>
    </a>

    {{ form_start(deleteForm) }}
        {{ form_widget(deleteForm) }}
        <button type="submit" class="btn btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this job?');">
            <span class="octicon octicon-trashcan"></span>
        </button>
    {{ form_end(deleteForm) }}
</div>
