<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Position</th>
        <th>Company</th>
        <th>Location</th>
    </tr>
    </thead>
    <tbody>
    {% for job in jobs %}
        <tr>
            <td scope="row">{{ loop.index }}</td>
            <td><a href="{{ path('app_job_view', {'id': job.id}) }}">{{ job.position }}</a></td>
            <td>{{ job.company }}</td>
            <td>{{ job.location }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
