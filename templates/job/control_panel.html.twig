<div class="container">
    <div class="card">
        <div class="card-header">
            <i class="fa fa-align-justify"></i> Control Panel:
        </div>
        <div class="card-body">
            <ul class="nav nav-pills">
                <li class="nav-item">
                    {{ form_start(deleteForm, {'attr': {'class': 'navbar-form navbar-left'}}) }}
                    {{ form_widget(deleteForm) }}

                    <button type="submit" class="btn btn-default" onclick="return confirm('Are you sure?')">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        Delete
                    </button>
                    {{ form_end(deleteForm) }}
                </li>

                <li class="nav-item">
                    {{ form_start(publishForm, {'attr': {'class': 'navbar-form navbar-left'}}) }}
                    {{ form_widget(publishForm) }}

                    <button type="submit" class="btn btn-default">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        Publish
                    </button>
                </li>

                <li class="nav-item">
                    {% if job.activated %}
                    {% if job.expiresAt < date() %}
                        <span class="navbar-text text-right">Expired</span>
                    {% else %}
                        <span class="navbar-text ">Expires in <strong>{{ job.expiresAt.diff(date())|date('%a') }}</strong> days
                    </span>
                    {% endif %}
                    {% else %}</li>
                <li class="nav-item">

                    <a class="btn btn-default navbar-btn" href="{{ path('job.edit', { 'token': job.token }) }}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Edit
                    </a>
                </li>

                {{ form_end(deleteForm) }}
            </ul>
            {% endif %}
        </div>
    </div>
</div>
